# =====================================================
# Clinic Management System - Docker Environment
# =====================================================
# Copy this file to .env and customize as needed
# Do NOT commit .env file to version control!
# =====================================================

# ==========================================
# Application Settings
# ==========================================
APP_NAME="ClinicMaster"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Locale settings
APP_LOCALE=ar
APP_FALLBACK_LOCALE=ar
APP_FAKER_LOCALE=ar_SA

# ==========================================
# Docker Port Configuration
# ==========================================
# Change these if you have port conflicts
APP_PORT=8000
DB_EXTERNAL_PORT=3306
REDIS_EXTERNAL_PORT=6379
PHPMYADMIN_PORT=8080
MAILPIT_HTTP_PORT=8025
MAILPIT_SMTP_PORT=1025

# ==========================================
# Database Configuration
# ==========================================
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=clinic_master
DB_USERNAME=clinic_user
DB_PASSWORD=clinic_secret
DB_ROOT_PASSWORD=root_secret

# ==========================================
# Redis Configuration
# ==========================================
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==========================================
# Session & Cache
# ==========================================
SESSION_DRIVER=redis
SESSION_LIFETIME=120
CACHE_STORE=redis
QUEUE_CONNECTION=redis

# ==========================================
# Mail Configuration
# ==========================================
# For development with Mailpit:
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@clinic.local"
MAIL_FROM_NAME="${APP_NAME}"

# ==========================================
# Stripe Payment Gateway (Optional)
# ==========================================
# Get your keys from https://dashboard.stripe.com/apikeys
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=
STRIPE_CURRENCY=EGP

# ==========================================
# Logging
# ==========================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ==========================================
# Encryption
# ==========================================
BCRYPT_ROUNDS=12

# ==========================================
# Filesystem
# ==========================================
FILESYSTEM_DISK=local

# ==========================================
# Broadcasting (Optional)
# ==========================================
BROADCAST_CONNECTION=log

# ==========================================
# Vite
# ==========================================
VITE_APP_NAME="${APP_NAME}"
